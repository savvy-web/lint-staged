{
	"name": "@savvy-web/lint-staged",
	"version": "0.3.0",
	"private": false,
	"description": "Composable, configurable lint-staged handlers for pre-commit hooks. Provides reusable handlers for Biome, Markdown, YAML, TypeScript, and more.",
	"keywords": [
		"lint-staged",
		"pre-commit",
		"hooks",
		"biome",
		"markdown",
		"yaml",
		"typescript",
		"formatting",
		"linting"
	],
	"homepage": "https://github.com/savvy-web/lint-staged#readme",
	"bugs": {
		"url": "https://github.com/savvy-web/lint-staged/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/savvy-web/lint-staged.git"
	},
	"license": "MIT",
	"author": {
		"name": "C. Spencer Beggs",
		"email": "spencer@savvyweb.systems",
		"url": "https://savvyweb.systems"
	},
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./biome/silk.jsonc": "./src/public/silk.jsonc"
	},
	"bin": {
		"savvy-lint": "./src/bin/cli.ts"
	},
	"scripts": {
		"build": "turbo run build:dev build:prod --log-order=grouped",
		"build:dev": "rslib build --config-loader native --env-mode dev",
		"build:inspect": "rslib inspect --verbose",
		"build:prod": "rslib build --config-loader native --env-mode npm",
		"ci:build": "CI=\"true\" turbo run build:dev build:prod --log-order=grouped --output-logs=full",
		"ci:test": "CI=\"true\" turbo run vitest:unit --log-prefix=none --log-order=grouped",
		"ci:version": "changeset version && biome format --write .",
		"generate:templates": "node scripts/generate-markdownlint-template.ts && biome check --write src/cli/templates/markdownlint.gen.ts",
		"postinstall": "savvy-lint check --quiet || true",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"prepare": "husky",
		"test": "turbo run vitest:unit --log-prefix=none --log-order=grouped",
		"test:watch": "vitest --watch",
		"typecheck": "turbo run types:check --log-prefix=none --log-order=grouped",
		"types:check": "tsgo --noEmit",
		"vitest:unit": "vitest run --coverage"
	},
	"dependencies": {
		"@effect/cli": "^0.73.2",
		"@effect/platform": "^0.94.3",
		"@effect/platform-node": "^0.104.1",
		"@typescript-eslint/parser": "^8.54.0",
		"cosmiconfig": "^9.0.0",
		"effect": "^3.19.16",
		"eslint": "^9.39.2",
		"eslint-plugin-tsdoc": "^0.5.0",
		"jsonc-parser": "^3.3.1",
		"sort-package-json": "^3.6.1",
		"workspace-tools": "^0.41.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@microsoft/api-extractor": "catalog:silk",
		"@rslib/core": "catalog:silk",
		"@savvy-web/commitlint": "^0.2.1",
		"@savvy-web/rslib-builder": "^0.12.0",
		"@types/node": "catalog:silk",
		"@typescript/native-preview": "catalog:silk",
		"@vitest/coverage-v8": "catalog:silk",
		"husky": "catalog:silk",
		"lint-staged": "catalog:silk",
		"markdownlint-cli2": "catalog:silk",
		"markdownlint-cli2-formatter-codequality": "catalog:silk",
		"turbo": "catalog:silk",
		"typescript": "catalog:silk",
		"vitest": "catalog:silk"
	},
	"peerDependencies": {
		"@biomejs/biome": "2.3.14",
		"husky": "catalog:silk",
		"lint-staged": "catalog:silk",
		"markdownlint-cli2": "catalog:silk",
		"markdownlint-cli2-formatter-codequality": "catalog:silk"
	},
	"peerDependenciesMeta": {
		"@biomejs/biome": {
			"optional": true
		},
		"husky": {
			"optional": false
		},
		"lint-staged": {
			"optional": false
		},
		"markdownlint-cli2": {
			"optional": false
		},
		"markdownlint-cli2-formatter-codequality": {
			"optional": false
		}
	},
	"packageManager": "pnpm@10.28.2",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"version": "10.28.2",
			"onFail": "ignore"
		},
		"runtime": [
			{
				"name": "node",
				"version": "24.11.0",
				"onFail": "ignore"
			}
		]
	},
	"publishConfig": {
		"access": "public",
		"dist": "dist/dev",
		"linkDirectory": true,
		"targets": [
			{
				"protocol": "npm",
				"registry": "https://npm.pkg.github.com/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			},
			{
				"protocol": "npm",
				"registry": "https://registry.npmjs.org/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			}
		]
	}
}
