{
	"$schema": "https://turborepo.com/schema.v2.json",
	"globalPassThroughEnv": ["GITHUB_ACTIONS", "CI"],
	"tasks": {
		"build:dev": {
			"cache": true,
			"dependsOn": ["types:check"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yml",
				"$TURBO_ROOT$/pnpm-workspace.yml",
				"package.json",
				"rslib.config.ts",
				"tsconfig.json",
				"src/**/*.ts",
				"README.md",
				"LICENSE"
			],
			"outputLogs": "errors-only",
			"outputs": ["dist/dev/**", ".rslib/declarations/dev/**"]
		},
		"build:prod": {
			"cache": true,
			"dependsOn": ["types:check"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yml",
				"$TURBO_ROOT$/pnpm-workspace.yml",
				"package.json",
				"rslib.config.ts",
				"tsconfig.json",
				"src/**/*.ts",
				"README.md",
				"LICENSE"
			],
			"outputLogs": "full",
			"outputs": ["dist/npm/**", ".rslib/declarations/npm/**"]
		},
		"generate:templates": {
			"cache": true,
			"dependsOn": [],
			"inputs": ["lib/configs/.markdownlint-cli2.jsonc", "scripts/generate-markdownlint-template.ts"],
			"outputLogs": "errors-only",
			"outputs": ["src/cli/templates/*.gen.ts"]
		},
		"types:check": {
			"cache": true,
			"dependsOn": ["generate:templates"],
			"inputs": ["*.ts", "lib/**/*.ts", "lib/**/*.mts"],
			"outputLogs": "errors-only",
			"outputs": []
		},
		"vitest:unit": {
			"cache": false,
			"dependsOn": ["build:dev"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yml",
				"$TURBO_ROOT$/pnpm-workspace.yml",
				"package.json",
				"tsconfig.json",
				"src/**/*.ts",
				"tests/**/*.ts",
				"vitest.config.ts"
			],
			"outputLogs": "full",
			"outputs": ["coverage/**"]
		}
	}
}
